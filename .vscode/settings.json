{
  "search.exclude": {
    "**/node_modules/**": true,
    "**/cdk.out": true,
    "target/**": true,
    ".venv/**": true,
    "**/.tox/**": true,
    "**/build/**": true,
    "**/package-lock.json": true,
    "**/yarn.lock": true
  },
  "files.eol": "\n",
  "files.autoGuessEncoding": true,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "python.analysis.exclude": [
    "**/cdk.out/**",
    "target/**",
    ".venv/**",
    "**/.tox/**",
    "**/build/**"
  ],
  "python.analysis.extraPaths": [
    "${workspaceFolder}/src/app/src",
    "${workspaceFolder}/src/tools/clinicaltrials"
  ],
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoFormatStrings": true,
  "pylint.args": [
    "--disable=C0103,C0114,C0115,C0116,C0201,C0206,C0209,C0301,C0411,W0201,W0702,W0703,W0612,W1201,W1202,W1203,W1514,W0640,E0601,import-error",
    "--generate-members"
  ],
  "black-formatter.args": [
    "--line-length=120"
  ],
  "flake8.args": [
    "--max-line-length",
    "120",
    "--ignore",
    "D100,D104,E902",
    "--exclude",
    "misc/",
    "--docstring-convention",
    "google"
  ],
  "isort.args": [
    "--profile",
    "black"
  ],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [
    "-sv"
  ],
  "mypy.targets": [
    "./src/"
  ],
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.find.autoFindInSelection": "multiline",
  "editor.renderWhitespace": "all",
  "editor.rulers": [
    120
  ],
  "editor.codeActionsOnSave": {
    "source.addMissingImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "workbench.editor.labelFormat": "long",
  "prettier.printWidth": 120,
  "eslint.format.enable": true,
  "eslint.validate": [
    "javascript"
  ],
  "eslint.workingDirectories": [
    "./infra"
  ],
  "terminal.integrated.scrollback": 5000,
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.organizeImports": "explicit"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    },
    "editor.formatOnSave": true,
    "editor.rulers": [
      120
    ]
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[json][jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker",
    "editor.formatOnSave": true
  },
  "[dockercompose]": {
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.tabSize": 4
  },
  "outline.collapseItems": "alwaysCollapse",
}
